{
  "name": "iad-metiers-2025",
  "version": "1.0.0",
  "description": "SIte soirée métiers multimédia 2025-2026",
  "type": "module",
  "scripts": {
    "clear": "rimraf \"./dist/\"",
    "server": "npx @11ty/eleventy --serve --quiet",
    "eleventy": "npx @11ty/eleventy --quiet",
    "css:dev": "lightningcss --bundle \"./src/assets/css/main.css\" -o \"./dist/assets/css/main.css\"",
    "js:dev": "esbuild \"./src/assets/js/main.js\" --bundle --target=es2020 --outfile=\"./dist/assets/js/main.bundle.js\"",
    "css:prod": "lightningcss --minify --bundle --browserslist \"./src/assets/css/main.css\" -o \"./dist/assets/css/main.css\"",
    "js:prod": "esbuild \"./src/assets/js/main.js\" --bundle --minify --target=es2020 --outfile=\"./dist/assets/js/main.bundle.js\"",
    "watch:css": "onchange \"./src/assets/css/**/*\" -- npm run css:dev",
    "watch:js": "onchange \"./src/assets/js/**/*\" -- npm run js:dev",
    "dev": "npm-run-all --parallel server watch:*",
    "build": "npm-run-all clear --parallel eleventy js:prod css:prod"
  },
  "browserslist": "> 0.5% and not dead",
  "keywords": [],
  "author": "Jérôme Coupé",
  "license": "CC-BY-SA-4.0",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "esbuild": "^0.27.0",
    "lightningcss-cli": "^1.30.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rimraf": "^6.1.0"
  }
}
